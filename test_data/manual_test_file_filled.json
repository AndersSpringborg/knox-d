{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string"
        },
        "schemaLocation": {
            "type": "string"
        },
        "schemaVersion": {
            "type": "string"
        },
        "generator": {
            "type": "object",
            "properties": {
                "app": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "generatedAt": {
                    "type": "string"
                }
            },
            "required": [
                "app",
                "version",
                "generatedAt"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "publisher": {
                    "type": "string"
                },
                "publishedAt": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "sections": {
                    "type": "array",
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "page": {
                                    "type": "string"
                                },
                                "header": {
                                    "type": "string"
                                },
                                "paragraphs": {
                                    "type": "array",
                                    "items": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "page": {
                                                    "type": "string"
                                                },
                                                "text": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "text"
                                            ]
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "paragraphs"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "sections"
            ]
        }
    },
    "required": [
        "type",
        "shcemaLocation",
        "schemaVersion",
        "generator",
        "content"
    ]
}